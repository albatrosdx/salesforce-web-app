# Salesforce Configuration
# Replace these with your actual Salesforce org credentials
SALESFORCE_INSTANCE_URL=https://your-domain.my.salesforce.com
SALESFORCE_CLIENT_ID=your_client_id_here
SALESFORCE_CLIENT_SECRET=your_client_secret_here

# NextAuth Configuration
NEXTAUTH_URL=https://your-app-domain.vercel.app
NEXTAUTH_SECRET=your_64_character_random_string_here

# Debug mode for NextAuth (set to true for production debugging)
NEXTAUTH_DEBUG=false

# Application Configuration
NODE_ENV=production

# Important Notes:
# 1. NEXTAUTH_URL should match your deployed Vercel URL exactly
# 2. SALESFORCE_INSTANCE_URL should not have trailing spaces or slashes
# 3. Ensure your Salesforce Connected App callback URL includes:
#    - https://your-app-domain.vercel.app/api/auth/callback/salesforce
# 4. NEXTAUTH_SECRET should be a secure random string (64+ characters)

# Salesforce Einstein Agent API Configuration
SALESFORCE_AGENT_ID=YOUR_AGENT_ID_HERE
SALESFORCE_MY_DOMAIN_URL=your-domain.my.salesforce.com
SALESFORCE_DOMAIN=your-domain.my.salesforce.com
SALESFORCE_ENVIRONMENT=production # or 'sandbox'
